<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	    Title="Main Window" Height="500" Width="900" WindowStartupLocation="CenterScreen"
        Background="Blue" WindowStyle="None" ResizeMode="NoResize">
    <StackPanel Margin="5" Background="Red">
        <DockPanel Height="32" Background="Green">
            <TextBlock Text="Logare" Margin="16, 2, 2, 2" DockPanel.Dock="Left" VerticalAlignment="Center" HorizontalAlignment="Left" Background="Purple" 
                       FontSize="18" Style="{StaticResource CaptionTextBlockStyle}"/>
            <Button x:Name="btnClose" Margin="2" DockPanel.Dock="Right" VerticalAlignment="Stretch" HorizontalAlignment="Right" />
        </DockPanel>
    </StackPanel>
</Window>