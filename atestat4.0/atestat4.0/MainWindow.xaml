<Window x:Class="atestat4._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logare" Width="800" Height="450"
        WindowStyle="None" ResizeMode="CanResize" AllowsTransparency="False"
        Background="White" Icon="/Icon.png"/>

<Border BorderThickness="8" BorderBrush="Transparent">
    <Grid>
        <Border Height="32" Background="#FF2D2D30">
            <DockPanel LastChildFill="True">
                <TextBlock Text="My App" VerticalAlignment="Center" Margin="10,0,0,0"
                           FontSize="14" Foreground="White"  DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <Button Content="—" Width="40" Background="Transparent" Foreground="White" BorderBrush="Transparent"/>
                    <Button Content="▢" Width="40" Background="Transparent" Foreground="White" BorderBrush="Transparent"/>
                    <Button Content="✕"
                                Width="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,32,0,0">
            <!-- Leave space for title bar -->
            <TextBlock Text="Hello, World!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="24"/>
        </Grid>

    </Grid>
</Border>>